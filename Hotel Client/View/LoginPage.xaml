<Window x:Class="Hotel_Client.View.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Hotel_Client.ViewModel"
        Title="Login" Height="450" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:LoginPageViewModel />
    </Window.DataContext>

    <ScrollViewer>
        <Grid Background="White" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="1" Margin="0,20,0,0">
                <TextBlock Text="Welcome to our hotel!" 
                           FontSize="24" FontWeight="Bold"
                           HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <TextBlock Text="Sign in to continue..."
                           FontSize="16"
                           HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <Border BorderBrush="#4087a7" BorderThickness="1" CornerRadius="10" Margin="0,5">
                    <TextBox Text="{Binding Username}" 
                             Padding="10"
                             FontWeight="Bold" Foreground="Black"
                             PlaceholderText="Username"/>
                </Border>

                <Border BorderBrush="#4087a7" BorderThickness="1" CornerRadius="10" Margin="0,10">
                    <PasswordBox x:Name="PasswordBox" PasswordChanged="PasswordBox_OnPasswordChanged" 
                                 Padding="10"/>
                </Border>

                <Button Content="Sign in" 
                        Command="{Binding LoginCommand}"
                        Background="#4087a7" Foreground="White"
                        FontWeight="Bold" 
                        Height="40" Width="150"
                        HorizontalAlignment="Center"
                        Margin="0,15,0,0"
                        BorderThickness="0"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>