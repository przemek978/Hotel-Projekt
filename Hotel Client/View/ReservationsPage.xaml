<Window x:Class="Hotel_Client.View.ReservationsPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Hotel_Client.ViewModel"
        Title="Reservations" Height="600" Width="800" WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:ReservationsPageViewModel />
    </Window.DataContext>

    <ScrollViewer>
        <Grid Background="White" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Your reservations" FontSize="24" FontWeight="Bold"
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <ListBox Grid.Row="1" ItemsSource="{Binding Reservations}" Margin="0,10,0,0">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="DarkGray" BorderThickness="1" CornerRadius="8" Margin="5" Padding="10" Background="LightGray">
                            <StackPanel>
                                <TextBlock FontWeight="Bold" Text="Reservation number: ">
                                    <Run Text="{Binding Number}"/>
                                </TextBlock>

                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <Button Content="Cancel" Command="{Binding DataContext.CancelReservationCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}" Margin="0,0,10,0"/>
                                    <Button Content="Show confirmation" Command="{Binding DataContext.ShowConfirmationCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}"/>
                                </StackPanel>

                                <TextBlock Text="From: {Binding From}" Margin="0,5,0,0"/>
                                <TextBlock Text="To: {Binding To}"/>
                                <TextBlock Text="Rooms count: {Binding Rooms.Count}"/>
                                <TextBlock Text="Notes: {Binding Notes}"/>

                                <Button Content="Details" Command="{Binding DataContext.ReservationSelectionCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}" Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </ScrollViewer>
</Window>
