<Window x:Class="Hotel_Client.View.ReservationDetailsPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Hotel_Client.ViewModel"
        Title="Reservation Details" Height="700" Width="800" WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:ReservationDetailsPageViewModel />
    </Window.DataContext>

    <ScrollViewer>
        <StackPanel Margin="20" Background="White">
            <TextBlock Text="Reservation details" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Margin="0,10,0,0">
                <Run Text="Reservation number: " FontWeight="Bold"/>
                <Run Text="{Binding Reservation.Number}"/>
            </TextBlock>

            <TextBlock Margin="0,10,0,0">
                <Run Text="From: " FontWeight="Bold"/>
                <Run Text="{Binding Reservation.From}"/>
            </TextBlock>

            <TextBlock Margin="0,10,0,0">
                <Run Text="To: " FontWeight="Bold"/>
                <Run Text="{Binding Reservation.To}"/>
            </TextBlock>

            <TextBlock Margin="0,10,0,0">
                <Run Text="Rooms count: " FontWeight="Bold"/>
                <Run Text="{Binding Reservation.Rooms.Count}"/>
            </TextBlock>

            <TextBlock Margin="0,10,0,0">
                <Run Text="Notes: " FontWeight="Bold"/>
                <Run Text="{Binding Reservation.Notes}"/>
            </TextBlock>

            <TextBlock Text="Modify date" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,30,0,10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                <StackPanel Margin="10">
                    <TextBlock Text="From"/>
                    <DatePicker SelectedDate="{Binding DateFrom}"/>
                </StackPanel>
                <StackPanel Margin="10">
                    <TextBlock Text="To"/>
                    <DatePicker SelectedDate="{Binding DateTo}"/>
                </StackPanel>
            </StackPanel>

            <Button Content="Save changes"
                    Command="{Binding SaveChangesCommand}"
                    Background="#4087a7" Foreground="White"
                    FontWeight="Bold" Width="150" Margin="0,20" HorizontalAlignment="Center"/>

            <TextBlock Text="Additional notes:" Margin="0,20,0,5"/>
            <TextBox Text="{Binding Note}" Height="150" AcceptsReturn="True" TextWrapping="Wrap" BorderBrush="#4087a7" BorderThickness="1"/>

            <ItemsControl ItemsSource="{Binding ReservationRooms}" Margin="0,30,0,0">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderThickness="1" BorderBrush="Gray" Margin="5" Padding="10" Background="DarkGray">
                            <StackPanel>
                                <TextBlock Text="{Binding RoomNumber, StringFormat=Room number: {0}}" FontWeight="Bold" Foreground="White"/>
                                <TextBlock Text="{Binding RoomSize, StringFormat=Room size: {0} square meters}" Foreground="White"/>
                                <TextBlock Text="{Binding Description, StringFormat=Description: {0}}" Foreground="White" Margin="0,5,0,0"/>
                                <Button Content="Remove" Command="{Binding DataContext.RemoveRoomCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}" Margin="0,5,0,0" Width="80"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </ScrollViewer>
</Window>
